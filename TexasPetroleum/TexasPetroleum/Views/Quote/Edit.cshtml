@using TexasPetroleum.Enums

@model TexasPetroleum.ViewModels.QuoteVM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quote Form</h2>

<div class="container">

    <div class="form-group">
        @Html.LabelFor(m => m.AddressLine1)
        @Html.ValidationMessageFor(m => m.AddressLine1)
        @Html.TextBoxFor(m => m.AddressLine1, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.AddressLine2)
        @Html.ValidationMessageFor(m => m.AddressLine2)
        @Html.TextBoxFor(m => m.AddressLine2, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.City)
        @Html.ValidationMessageFor(m => m.City)
        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="inputState">State</label>
        @Html.ValidationMessageFor(m => m.StateOption)
        @Html.DropDownListFor(m => m.StateOption, new SelectList(Enum.GetValues(typeof(DisplayEnums.StateOptions))), "Select Option", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Zipcode)
        @Html.ValidationMessageFor(m => m.Zipcode)
        @Html.TextBoxFor(m => m.Zipcode, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DeliveryDate)
        @Html.ValidationMessageFor(m => m.DeliveryDate)
        @Html.TextBoxFor(m => m.DeliveryDate, new { @class = "form-control", @type = "date" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.GallonsRequested)
        @Html.ValidationMessageFor(m => m.GallonsRequested)
        @Html.TextBoxFor(m => m.GallonsRequested, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.SuggestedPrice)
        @Html.TextBoxFor(m => m.SuggestedPrice, new { @readonly = "readonly", @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.TotalPrice)
        @Html.TextBoxFor(m => m.TotalPrice, new { @readonly = "readonly", @class = "form-control" })
    </div>
    @using (Html.BeginForm("Edit", "Quote", FormMethod.Post))
    {
        <button>Save</button>
    }

</div>
